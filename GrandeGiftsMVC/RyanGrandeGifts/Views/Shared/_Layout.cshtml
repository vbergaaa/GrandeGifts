<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script&display=swap" rel="stylesheet">
    <link href="~/Assets/styles/StyleSheet.css" rel="stylesheet" />
    <link href="~/Assets/styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/fonts/fontawesome-free/css/all.min.css" rel="stylesheet" />
    
</head>
<body class="container-fluid min-vh-100 d-flex flex-column">
    <header class="row header">
        <span class="col d-flex justify-content-center align-items-center h-100 h2 heading">
            <img src="~/Images/logo.jpg" class="pic" />Grande Gifts
        </span>
        <!--
        <div class="h-100">

            <h1 class="heading"></h1>
        </div>-->
    </header>
    <nav class="navbar navbar-dark navbar-expand-sm bg-dark">
        <a class="navbar-brand" href="/">Grande Gifts</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/Hamper/">Hampers</a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Category/">Categories</a>
                    </li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Profile">Profile</a>
                    </li>

                }

            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Cart/"><i class="fas fa-shopping-cart fa-lg"></i></a>
                </li>
            </ul>

            <ul class="navbar-nav">

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item mx-3">
                        @Html.ActionLink("Welcome " + @User.Identity.Name, "Profile", "Account")
                    </li>
                    <li class="nav-item mx-3">
                        @Html.ActionLink("Logout", "Logout", "Account");
                    </li>
                }
                else
                {
                    <li class="nav-item mx-3">
                        @Html.ActionLink("Register", "Register", "Account", new { ReturnUrl = Context.Request.Path.ToString() });
                    </li>
                    <li class="nav-item mx-3">
                        @Html.ActionLink("Log In", "Login", "Account", new { ReturnUrl = Context.Request.Path.ToString() });
                    </li>
                }
            </ul>
        </div>
    </nav>
    <main class="row flex-fill">
        @RenderBody()
    </main>
    <footer class="footer page-footer font-small blue pt-4 mt-auto">
        <div class="container-fluid text-center text-md-left bg-dark text-secondary">
            <div class="row">
                <div class="col-lg-6 col-sm-12 mt-md-0 mt-3">
                    <h5 class="text-uppercase">Grande Gifts</h5>
                    <p>
                        Grande Gifts is a fictional company for use as a personal project
                        created by Ryan Vandenberg for TafeNSW.
                    </p>
                </div>
                <hr class="clearfix w-100 d-lg-none pb-0">
                <div class="col-lg-3 col-sm-6 mb-md-0 mb-3">
                    <h5 class="text-uppercase">Contact Us:</h5>
                    <ul class="list-unstyled">
                        <li>
                            <p>Phone: (123) 456 789</p>
                        </li>
                        <li>
                            <p>Email: grandegifts@email.com</p>
                        </li>
                        <li>
                            <p>Address: 44 Wallaby Way, Sydney, 2000, NSW, Australia</p>
                        </li>
                    </ul>
                </div>
                <hr class="clearfix w-100 d-sm-none pb-0">
                <div class="col-lg-3 col-sm-6 mb-md-0 mb-3">
                    <h5 class="text-uppercase">Links:</h5>
                    <ul class="list-unstyled">
                        <li>
                            @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Terms of use", "TermsOfUse", "Home")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright text-center py-3">
            © 2019 Copyright:
            <a href="~/">grandegiftsryanvandenberg.azurewebsites.net</a>
        </div>
    </footer>
    <script src="~/Assets/js/jquery.min.js"></script>
    <script src="~/Assets/js/index.min.js"></script>
    <script src="~/Assets/js/bootstrap.js"></script>
</body>
</html>
