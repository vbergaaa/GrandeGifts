@model AddressCreateViewModel
@{
    ViewData["Title"] = "Add Address";
}
<div class="col d-flex justify-content-center align-items-center bg-secondary">
    <div class="card p-3 m-3" style="width: 18rem;">
        <h2>Add a favourite Address</h2>
        <form asp-action="Create" asp-controller="Address" asp-antiforgery="true" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="d-none">
                <input asp-for="ReturnUrl"/>
            </div>
            <div class="form-group">
                <label asp-for="UnitNumber"></label>
                <input asp-for="UnitNumber" class="form-control" />
                <span asp-validation-for="UnitNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetNumber"></label>
                <input asp-for="StreetNumber" class="form-control" />
                <span asp-validation-for="StreetNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetName"></label>
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostCode"></label>
                <input asp-for="PostCode" class="form-control" />
                <span asp-validation-for="PostCode"></span>
            </div>
            <div class="form-group">
                <label asp-for="Suburb"></label>
                <input asp-for="Suburb" class="form-control" />
                <span asp-validation-for="Suburb"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City"></span>
            </div>
            <div class="form-group">
                <label asp-for="State"></label>
                <select asp-items="@Html.GetEnumSelectList<StateEnum>()" asp-for="State"></select>
                <span asp-validation-for="State"></span>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" />
                <span>@Html.ActionLink("Back", "Index", "Address", null, new { @class = "btn btn-secondary" })</span>
            </div>
        </form>
    </div>
</div>




