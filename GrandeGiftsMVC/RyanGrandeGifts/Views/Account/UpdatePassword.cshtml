@model AccountChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="col d-flex justify-content-center align-items-center bg-secondary">
    <div class="card p-3 m-3" style="width: 18rem;">

        <h2>Change Password for @Model.UserName</h2>
        <form asp-action="UpdatePassword" asp-controller="Account" asp-antiforgery="true" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="d-none">
                <input asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <input type="submit" value="Log In" class="btn btn-primary" />
                @Html.ActionLink("Back","Profile","Account",null,new { @class="btn btn-secondary"})
            </div>

        </form>
    </div>
</div>
