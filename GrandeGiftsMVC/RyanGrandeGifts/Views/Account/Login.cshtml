@model AccountLoginViewModel
@{
    ViewData["Title"] = "Login";
}

    <div class="col d-flex justify-content-center align-items-center bg-secondary">
        <div class="card p-3 m-3" style="width: 18rem;">

            <h2>Login</h2>
            <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="d-none">
                    <input asp-for="ReturnUrl" />
                </div>
                <div class="form-group">
                    <label asp-for="UserName">Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe">Remember Me?</label>
                    <span asp-validation-for="RememberMe"></span>
                </div>
                <div class="d-flex justify-content-around">
                    <input type="submit" value="Log In" class="btn btn-primary col-5" />
                    <a class="btn btn-secondary col-5" href="@Model.ReturnUrl">Back</a>
                </div>
                
            </form>
            <br/><p class="text-center">Don't have an account? </p><p class="text-center" style="line-height:0">@Html.ActionLink("Create one!", "Register", "Account", new { returnUrl = Model.ReturnUrl})</p>
            
        </div>
    </div>
        