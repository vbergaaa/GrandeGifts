@model HamperUpdateViewModel
@{
    ViewData["Title"] = "View a hamper";
}

<div class="col d-flex justify-content-center align-items-center bg-secondary">
    <div class="card p-3 m-3" style="width: 18rem;">
        <h2>Create a Hamper</h2>
        <form asp-action="Update" asp-controller="Hamper"  asp-antiforgery="true" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="d-none">
                <input asp-for="HamperId" />
                <input asp-for="ReturnUrl"/>
            </div>
            <div class="form-group">
                <label asp-for="HamperName"></label>
                <input asp-for="HamperName" class="form-control" />
                <span asp-validation-for="HamperName"></span>
            </div>
            <div class="form-group">
                <label asp-for="HamperDescription"></label>
                <input asp-for="HamperDescription" class="form-control" />
                <span asp-validation-for="HamperDescription"></span>
            </div>
            <div class="form-group">
                <label asp-for="HamperPrice"></label>
                <input asp-for="HamperPrice" class="form-control" />
                <span asp-validation-for="HamperPrice"></span>
            </div>
            <div class="form-group">
                <label>Category</label>
                <select asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))" asp-for="CategoryId" class="form-control"></select>
                <span asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-check">
                <input asp-for="Retired" class="check-control" />
                <label>Retire this hamper</label>
                <span asp-validation-for="Retired"></span>
            </div>
            @if (Model.Picture == null)
            {
                <div class="form-group">
                    <label asp-for="File"></label>
                    <input asp-for="File" class="form-control" />
                    <span asp-validation-for="File"></span>
                </div>
            }
            <div>
                <input type="submit" class="btn btn-primary" />
                <a class="btn btn-secondary" href="@Model.ReturnUrl">Cancel</a>
            </div>
        </form>
    </div>
</div>






